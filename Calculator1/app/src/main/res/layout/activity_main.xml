<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <TextView
                style="@style/background"
                android:gravity="end"
                android:ellipsize="start"
                android:padding="10dp"
                android:text=""
                android:id="@+id/btn_input"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <TextView
                style="@style/background"
                android:text=""
                android:padding="10dp"
                android:gravity="end"
                android:ellipsize="start"
                android:id="@+id/btn_result"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <TextView
                style="@style/operatorsColor"

                android:text="C"
                android:id="@+id/btn_C"
                />
            <TextView
                style="@style/operatorsColor"
                android:id="@+id/btn_percent"
                android:text="%"
                />
            <TextView
                style="@style/operatorsColor"
                android:id="@+id/btn_back"
                android:drawableTop="@drawable/ic_baseline_backspace_24"
                android:paddingTop="40dp"
                />
            <TextView
                style="@style/operatorsColor"
                android:id="@+id/btn_div"
                android:text="รท"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <TextView
                style="@style/numberColor"
                android:text="7"
                android:id="@+id/btn_7"
                />
            <TextView
                style="@style/numberColor"
                android:text="8"
                android:id="@+id/btn_8"
                />
            <TextView
                style="@style/numberColor"
                android:id="@+id/btn_9"
                android:text="9"
                />
            <TextView
                style="@style/operatorsColor"
                android:id="@+id/btn_multiply"
                android:text="*"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <TextView
                style="@style/numberColor"
                android:text="4"
                android:id="@+id/btn_4"
                />
            <TextView
                style="@style/numberColor"
                android:id="@+id/btn_5"
                android:text="5"
                />
            <TextView
                style="@style/numberColor"
                android:id="@+id/btn_6"
                android:text="6"
                />
            <TextView
                style="@style/operatorsColor"
                android:id="@+id/btn_minus"
                android:text="-"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <TextView
                style="@style/numberColor"
                android:text="1"
                android:id="@+id/btn_1"
                />
            <TextView
                style="@style/numberColor"
                android:id="@+id/btn_2"
                android:text="2"
                />
            <TextView
                style="@style/numberColor"
                android:id="@+id/btn_3"
                android:text="3"
                />
            <TextView
                style="@style/operatorsColor"
                android:id="@+id/btn_plus"
                android:text="+"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <TextView
                style="@style/numberColor"
                android:layout_width="306dp"
                android:id="@+id/btn_0"
                android:text="0" />

            <TextView
                style="@style/numberColor"
                android:layout_width="305dp"
                android:id="@+id/btn_point"
                android:text="." />
            <TextView
                style="@style/operatorsColor"
                android:id="@+id/btn_equal"
                android:text="="
                />

        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>