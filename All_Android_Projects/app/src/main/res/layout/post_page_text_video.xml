<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2a2a2a"

    android:layout_height="match_parent">


    <TextView
        android:id="@+id/Status_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <VideoView
        android:id="@+id/VideoView_post"
        android:layout_width="match_parent"
        android:layout_height="301dp"
        app:layout_constraintTop_toBottomOf="@+id/Status_TextView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/VideoView_post"
        >

        <ImageView
            android:id="@+id/imageView_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_like_blue"
            />
        <TextView
            android:id="@+id/TextView_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="@string/like"
            android:textSize="20sp"
            android:layout_marginStart="5dp"/>

        <ImageView
            android:id="@+id/imageView_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_comment"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/TextView_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="@string/comment"
            android:textSize="20sp"
            android:layout_marginStart="5dp"/>

        <ImageView
            android:id="@+id/imageView_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_share"/>

        <TextView
            android:id="@+id/TextView_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="@string/share"
            android:textSize="20sp"
            android:layout_marginStart="5dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>