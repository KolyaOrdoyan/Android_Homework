<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a2a2a"
    tools:context=".menuvariety.MenuVarietyActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/menu_variety_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/pleas_choose_one_of_these"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/menu_variety_alert_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_main_button_blue"
        android:text="@string/alertdialog"
        android:textColor="#181818"
        android:textSize="16sp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_variety_textView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/menu_variety_date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_main_button_blue"
        android:text="@string/date_picker"
        android:textColor="#181818"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_variety_alert_dialog" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/menu_variety_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_main_button_blue"
        android:text="@string/timepicker"
        android:textColor="#181818"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_variety_date_picker" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/menu_variety_options_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_main_button_blue"
        android:text="@string/options_menu"
        android:textColor="#181818"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_variety_time_picker" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/menu_variety_context_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_main_button_blue"
        android:text="@string/context_menu"
        android:textColor="#181818"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_variety_options_menu" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/menu_variety_popup_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_main_button_blue"
        android:text="@string/popup_menu"
        android:textColor="#181818"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_variety_context_menu" />


    <!--    Popup Menu-->
</androidx.constraintlayout.widget.ConstraintLayout>